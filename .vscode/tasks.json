{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ESLint Watcher",
      "type": "shell",
      "command": "npm run eslint-watcher",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}